@page "{id}"
@model FrontEnd.Pages.CreateTicketModel
@{
    ViewData["Title"] = "Create Ticket";
}



@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}
<div class="row">
    <div class="card shadow h-100 col-12">
        <div class="card-header">
            <h4>EditTicket</h4>
        </div>
        <form method="post" class="form-horizontal">
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="card col-6 border-0">
                        <div class="form-group">
                            <div class="card-header">
                                <label asp-for="Ticket.Title"></label>
                            </div>
                            <div class="card-body">
                                <input asp-for="Ticket.Title" class="form-control" />
                                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="card col-6 border-0">
                        <div class="form-group">
                            <div class="card-header">
                                <label asp-for="Ticket.AssignedDevId"></label>
                            </div>
                            <div class="card-body">
                                <select asp-for="Ticket.AssignedDevId" asp-items="@Model.Users">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="card col-12 border-0">
                        <div class="form-group">
                            <div class="card-header">
                                <label asp-for="Ticket.Description"></label>
                            </div>
                            <div class="card-body">
                                <textarea asp-for="Ticket.Description" class="form-control"></textarea>
                                <span asp-validation-for="Ticket.Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="card col-6 border-0">
                        <div class="form-group">
                            <div class="card-header">
                                <label asp-for="Ticket.Priority"></label>
                            </div>
                            <div class="card-body">
                                <select asp-for="Ticket.Priority">
                                    <option>High</option>
                                    <option>Medium</option>
                                    <option>Low</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card col-6 border-0">
                        <div class="card-header">
                            <label asp-for="Ticket.TicketType"></label>
                        </div>
                        <div class="card-body">
                            <select asp-for="Ticket.TicketType">
                                <option>Bug</option>
                                <option>Feature</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
                        <a asp-page="/Project" asp-route-id="@Model.pId" class="btn btn-primary float-right">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
