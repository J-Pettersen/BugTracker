@page "{id}"
@model FrontEnd.EditProjectModel
@{
    ViewData["Title"] = "EditProject";
}

<h1>EditProject</h1>

@if (Model.ShowMessage)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>   </button>
        @Model.Message
    </div>
}

<form method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Project.Id" type="hidden" />
    <input asp-for="Project.ProjectManagerId" type="hidden" />
    <div class="form-group">
        <label asp-for="Project.Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Project.Title" class="form-control" />
            <span asp-validation-for="Project.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Project.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Project.Description" class="form-control"></textarea>
            <span asp-validation-for="Project.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" asp-page-handler="Delete" class="btn btn-danger">Delete</button>
            <button href='javascript:history.go(-1)' class="btn btn-primary float-sm-right" >Back</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
